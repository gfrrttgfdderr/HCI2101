    <script>
        const boardElement = document.getElementById("board");
        const statusElement = document.getElementById("status");
        const modeSelect = document.getElementById("mode");

        let board = [];
        let currentPlayer = "X";
        let gameOver = false;
        let mode = "single";

        const winPatterns = [
            [0,1,2],[3,4,5],[6,7,8],
            [0,3,6],[1,4,7],[2,5,8],
            [0,4,8],[2,4,6]
        ];

        function startGame() {
            board = Array(9).fill("");
            currentPlayer = "X";
            gameOver = false;
            mode = modeSelect.value;
            statusElement.textContent = "Ø¯ÙˆØ± Ø§Ù„Ù„Ø§Ø¹Ø¨: X";
            renderBoard();
        }

        function renderBoard() {
            boardElement.innerHTML = "";
            board.forEach((cell, index) => {
                const div = document.createElement("div");
                div.className = "cell";
                div.textContent = cell;
                div.onclick = () => handleMove(index);
                boardElement.appendChild(div);
            });
        }

        function handleMove(index) {
            if (board[index] !== "" || gameOver) return;

            board[index] = currentPlayer;
            renderBoard();

            if (checkWin(currentPlayer)) {
                statusElement.textContent = `ðŸŽ‰ Ø§Ù„ÙØ§Ø¦Ø² Ù‡Ùˆ: ${currentPlayer}`;
                gameOver = true;
                return;
            }

            if (board.every(c => c !== "")) {
                statusElement.textContent = "ðŸ¤ ØªØ¹Ø§Ø¯Ù„!";
                gameOver = true;
                return;
            }

            currentPlayer = currentPlayer === "X" ? "O" : "X";
            statusElement.textContent = `Ø¯ÙˆØ± Ø§Ù„Ù„Ø§Ø¹Ø¨: ${currentPlayer}`;

            if (mode === "single" && currentPlayer === "O") {
                setTimeout(computerMove, 500);
            }
        }

        function computerMove() {
            let emptyCells = board
                .map((v, i) => v === "" ? i : null)
                .filter(v => v !== null);

            let move = emptyCells[Math.floor(Math.random() * emptyCells.length)];
            handleMove(move);
        }

        function checkWin(player) {
            return winPatterns.some(pattern =>
                pattern.every(index => board[index] === player)
            );
        }

        startGame();
    </script>

